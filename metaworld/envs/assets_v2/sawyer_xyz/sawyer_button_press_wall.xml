<mujoco>
  <include file="../scene/basic_scene.xml"/>
  <include file="../objects/assets/buttonbox_dependencies.xml"/>
  <include file="../objects/assets/xyz_base_dependencies.xml"/>
  <include file="../objects/assets/wall_dependencies.xml"/>

  <extension>
      <plugin plugin="mujoco.sensor.touch_grid"/>
  </extension>
  <sensor>
  <plugin name="touch-left" plugin="mujoco.sensor.touch_grid" objtype="site" objname="touch-left">
    <config key="size" value="4 2"/>
    <config key="fov" value="90 90"/>
    <config key="gamma" value="0"/>
    <config key="nchannel" value="6"/>
  </plugin>
  <plugin name="touch-right" plugin="mujoco.sensor.touch_grid" objtype="site" objname="touch-right">
    <config key="size" value="4 2"/>
    <config key="fov" value="90 90"/>
    <config key="gamma" value="0"/>
    <config key="nchannel" value="6"/>
  </plugin>
  </sensor>
    <worldbody>
      <include file="../objects/assets/xyz_base.xml"/>



        <body name="box" pos="0 0.9 0.12">
          <include file="../objects/assets/buttonbox.xml"/>
          <site name="buttonStart" pos="0 -0.1935 0" size="0.005" rgba="0 0.8 0 1"/>
          <site name="hole" pos="0 -0.1 0" size="0.005" rgba="0 0.8 0 1"/>
        </body>
        <body name="wall" pos="0.1 0.6 0">
          <include file="../objects/assets/wall.xml"/>
        </body>
    </worldbody>

    <actuator>
        <position ctrllimited="true" ctrlrange="-1 1" joint="r_close" kp="400"  user="1"/>
        <position ctrllimited="true" ctrlrange="-1 1" joint="l_close" kp="400"  user="1"/>
    </actuator>
    <equality>
        <weld body1="mocap" body2="hand" solref="0.02 1"/>
    </equality>
</mujoco>
